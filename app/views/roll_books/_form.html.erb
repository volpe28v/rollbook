<div class="form">
<%= form_for([@event, @roll_book]) do |f| %>
  <% if @roll_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@roll_book.errors.count, "error") %> prohibited this roll_book from being saved:</h2>

      <ul>
      <% @roll_book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <dl>
    <dt class="label"><strong>参加コメント</strong> <em class="red">※参加者リストに表示されます</em></dt>
    <dd><%= f.text_area :comment %></dd>
  </dl>
  <div class="field">
    <%= f.hidden_field :user_id, {:value => current_user.id} %>
  </div>
  <div class="field">
    <%= f.hidden_field :event_id, {:value => params[:event_id]} %>
  </div>
  <div class="form-btn">
    <%= f.submit "このイベントに参加登録する", :class => "btn input-btn radius-8"%>
  </div>
<% end %>
</div>
